{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    // Output
    "noEmit": true,
    "sourceMap": true,

    // Modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["src/*"]
    },

    // Typechecking
    "skipLibCheck": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,

    // Extra types
    "lib": ["es2020", "es2021"],
    "types": ["node"]
  },

  "include": ["src/**/*.ts"]
}
